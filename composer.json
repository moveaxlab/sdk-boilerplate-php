{
    "name": "moveaxlab/sdk-boilerplate",
    "description": "Useful Boilerplate library that can be used to build PHP SDKs for your application",
    "type": "library",
    "keywords": ["php", "sdk", "boilerplate"],
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Valerio Cervo",
            "email": "v.cervo.90@gmail.com"
        },
        {
            "name": "MovEax Srls",
            "email": "info@moveax.it"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.4",
        "guzzlehttp/guzzle": "^6.3",
        "psr/simple-cache": "^1.0",
        "nesbot/carbon": "^1.36",
        "moveaxlab/validation-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "@stable",
        "fzaninotto/faker": "^1.8",
        "psy/psysh": "^0.9.9"
    },
    "autoload": {
        "psr-4": {
            "SDK\\Boilerplate\\": "src/",
            "SDK\\Boilerplate\\Tests\\" : "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    }
}
